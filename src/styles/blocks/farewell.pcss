.farewell {
    background-color: #222427;
    padding: 86px 0;
    color: $white;
    line-height: 30px;

    .menu__item {
        margin-right: 60px;
    }
}

.farewell__container {
    display: flex;
    justify-content: space-between;
}

.farewell__main-data {
    display: flex;
}

.farewell__year {
    flex: 25%;
    font-size: 48px;
    font-weight: 400;
    opacity: .1;
    margin-right: 60px;
    white-space: nowrap;
}

.farewell__hero {
    flex: 1;
}

.farewell__hero-description-text {
    font-size: 18px;
    font-weight: 700;
    line-height: 30px;
    text-transform: uppercase;
    margin-bottom: 34px;
}

.farewell__hero-decription-details {
    opacity: 0.15;
    font-size: 16px;
    font-weight: 400;
}

.farewell__data {
    display: flex;
    justify-content: space-between;
}

.farewell__more {
    margin-left: 143px;
}

.farewell__menu {
    margin-bottom: 70px;
}
